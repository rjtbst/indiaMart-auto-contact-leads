{
  "manifest_version": 3,
  "name": "IndiaMArt Auto Contact",
  "version": "1.0.0",
  "description": "Automatically scan and contact IndiaMArt buyers based on custom criteria",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.indiamart.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://seller.indiamart.com/bltxn/?pref=*"],
      "js": ["content.js", "sidebar.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}